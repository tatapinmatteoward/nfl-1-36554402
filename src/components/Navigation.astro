---
// Navigation component for FunPetToys Hub
---

<nav class="bg-gradient-to-r from-[#10B981] to-[#F59E0B] shadow-lg">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <!-- Logo/Brand -->
      <a href="/" class="text-2xl font-bold text-white flex items-center gap-2">
        <i class="fas fa-paw"></i>
        <span>FunPetToys Hub</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex gap-6">
        <a href="/" class="text-white font-medium hover:bg-white/20 px-3 py-2 rounded-lg transition-all duration-300 flex items-center gap-2">
          <i class="fas fa-home"></i>
          <span>Home</span>
        </a>
        <a href="/reviews" class="text-white font-medium hover:bg-white/20 px-3 py-2 rounded-lg transition-all duration-300 flex items-center gap-2">
          <i class="fas fa-star"></i>
          <span>Reviews</span>
        </a>
        <a href="/blog" class="text-white font-medium hover:bg-white/20 px-3 py-2 rounded-lg transition-all duration-300 flex items-center gap-2">
          <i class="fas fa-blog"></i>
          <span>Blog</span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button 
          type="button" 
          class="text-white text-xl focus:outline-none"
          aria-label="Toggle mobile menu"
        >
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation (hidden by default) -->
    <div class="md:hidden hidden mt-4 bg-white/20 rounded-lg p-4 backdrop-blur-sm">
      <div class="flex flex-col gap-3">
        <a href="/" class="text-white font-medium hover:bg-white/30 px-3 py-2 rounded-lg transition-all duration-300 flex items-center gap-2">
          <i class="fas fa-home"></i>
          <span>Home</span>
        </a>
        <a href="/reviews" class="text-white font-medium hover:bg-white/30 px-3 py-2 rounded-lg transition-all duration-300 flex items-center gap-2">
          <i class="fas fa-star"></i>
          <span>Reviews</span>
        </a>
        <a href="/blog" class="text-white font-medium hover:bg-white/30 px-3 py-2 rounded-lg transition-all duration-300 flex items-center gap-2">
          <i class="fas fa-blog"></i>
          <span>Blog</span>
        </a>
      </div>
    </div>
  </div>
</nav>

<style>
  @import 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css';
  
  /* Mobile menu toggle functionality */
  nav button:focus + div,
  nav button:active + div {
    display: block !important;
  }
</style>